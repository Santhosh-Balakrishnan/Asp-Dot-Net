@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category Page";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text">
                Categories
            </h2>
        </div>
        <div class="col-6 text-end">
             <a class="btn btn-outline-success" asp-controller="Category" asp-action="Create">
                 <i class="bi bi-plus-circle-dotted"></i>&nbsp; Create
             </a>
        </div>  
    </div>
    <br/>
    <table class="table table-bordered table-striped">
           <thead>
               <tr>
                   <th>
                       Display Order
                   </th>
                   <th>
                       Name
                   </th>
                   <th>
                   </th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td width="50%">
                          @item.DisplayOrder
                       </td>
                       <td width="50%">
                           @item.Name
                       </td>
                       <td>
                           <div class="group" style="width:220px">
                           <a class="btn btn-outline-info" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" style="width:90px">
                              <i class="bi bi-pencil"></i>&nbsp; Edit
                            </a>
                             <a class="btn btn-outline-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" style="width:120px">
                              <i class="bi bi-trash"></i>&nbsp; Remove
                            </a>
                            </div>
                       </td>
                   </tr>
               }
           </tbody>
    </table>
</div>
