@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
           <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button class="btn btn-primary" style="width:150px"  asp-controller="Category" asp-action="Index">
         <i class="bi bi-arrow-left-short"></i> &nbsp;
         Back
        </button>
        <button class="btn btn-info" type="submit" style="width:150px">Update</button>
    </div>
</form>
@section scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}