@model Category
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden/>
        <div class="row pb-2">
            <h2 class="text">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control"/>
        </div>
        <button class="btn btn-primary" style="width:150px"  asp-controller="Category" asp-action="Index">
         <i class="bi bi-arrow-left-short"></i> &nbsp;
         Back
        </button>
        <button class="btn btn-info" type="submit" style="width:150px">Delete</button>
    </div>
</form>