@{
    ViewData["Title"] = "Product Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text">
                Products
            </h2>
        </div>
        <div class="col-6 text-end">
             <a class="btn btn-outline-success" asp-action="ProductDetails">
                 <i class="bi bi-plus-circle-dotted"></i>&nbsp; Create
             </a>
        </div>  
    </div>
    <br/>
    <table id="productTable" class="table table-bordered table-striped text-dark">
           <thead>
               <tr>
                   <th>
                       Title
                   </th>
                   <th>
                       ISBN
                   </th>
                   <th>
                       Author
                   </th>
                   <th>
                       Price
                   </th>
                   <th>
                       Category
                   </th>
                   <th></th>
               </tr>
           </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}