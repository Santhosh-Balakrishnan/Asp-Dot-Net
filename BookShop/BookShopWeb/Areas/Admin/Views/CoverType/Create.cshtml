@model CoverType
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Create CoverType</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name"  class="form-control"/>
        </div>
         <button class="btn btn-primary" asp-controller="CoverType" asp-action="Index">Back</button>
         <button type="submit" class="btn btn-info">Create</button>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}