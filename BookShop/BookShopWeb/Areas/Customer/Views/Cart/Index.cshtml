@model BookShop.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Cart";
}
<form method="post">
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 pt-2">
                    <i class="bi bi-cart2"></i>&nbsp;Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-outline-info">Continue Shopping</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @foreach (var item in Model.Items)
             {
                 <div class="row">
                <div class="col-lg-1 d-none d-lg-block text-center py-2">
                    <img src="@item.Product.ImageUrl" class="rounded" style="width:100%"/>
                </div>
                <div class="col-12 col-lg-6 pt-md-3">
                    <h5><strong>@item.Product.Name</strong></h5>
                    <p><small>@item.Product.Description</small></p>
                </div>
                <div class="col-12 col-lg-5 text-center row">
                    <div class="col-4 text-md-right pt-4">
                        <h6><strong>$@item.Price.ToString("0.00")<span class="text-muted">&nbsp;x&nbsp;</span>@item.Count</strong></h6>
                    </div>
                    <div class="col-6 col-sm-4 col-lg-6 pt-2">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Increment" asp-route-cartId="@item.Id">
                                <i class="bi bi-plus-circle"></i>
                            </a>
                            <a class="btn btn-warning" asp-action="Decrement" asp-route-cartId="@item.Id">
                                <i class="bi bi-dash-circle"></i>
                            </a>
                        </div>
                    </div>
                     <div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
                         <a class="btn btn-danger" asp-action="Remove" asp-route-cartId="@item.Id">
                             <i class="bi bi-trash"></i>
                         </a>
                     </div>
                </div>
            </div>
                 
                 <hr/>
             }
            <div class="row">
                <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between bg-light">
                            <span class="text-info">Total (INR)</span>
                            <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("0.0")</strong>
                        </li> 
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="card-footer-row text-end">
                <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6">
                    <button type="submit" asp-action="Summary" class="btn-success" style="border-radius:5px">Summary</button>
                </div>
            </div>
        </div>
    </div>
</div>
</form>